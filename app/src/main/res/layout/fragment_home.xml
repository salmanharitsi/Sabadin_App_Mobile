<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu1"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:layout_below="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF400"
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins"
        android:layout_centerHorizontal="true"
        android:text="Selamat datang"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sabadin"/>
    <TextView
        android:id="@+id/nama"
        android:layout_below="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF400"
        android:textSize="35dp"
        android:fontFamily="@font/poppins"
        android:layout_centerHorizontal="true"
        android:text="sabadin"/>

    <TextView
        android:layout_below="@+id/logo"
        android:layout_width="350dp"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textColor="@color/abu"
        android:textSize="15dp"
        android:fontFamily="@font/poppins"
        android:layout_centerHorizontal="true"
        android:text="Selamat datang di aplikasi studio foto kami! Kami sangat senang bisa membantu Anda dalam meningkatkan kualitas penjualan produk anda. Semoga pengalaman Anda menggunakan aplikasi kami menyenangkan dan memberikan hasil foto yang memukau. Terima kasih telah memilih kami sebagai solusi untuk kebutuhan fotografi Anda."/>
</LinearLayout>